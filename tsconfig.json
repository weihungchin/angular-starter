{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "baseUrl": "src",
    "paths": {
      "@app/*":["app/*"],
      "@env/*":["environments/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "es2016.array.include",
      "es2016",
      "es2015",
      "dom"
    ],
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
